<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alumno05.spinner" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SpinnerActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Uva"
            android:icon="@drawable/app_icon_your_company"
            android:label="@string/title_activity_uva"
            android:logo="@drawable/app_icon_your_company"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DetailsActivity" />
        <activity android:name=".PlaybackOverlayActivity" />
        <activity android:name=".BrowseErrorActivity" />
        <activity
            android:name=".Pera"
            android:label="@string/title_activity_pera" >
        </activity>
        <activity
            android:name=".CocaCola"
            android:label="@string/title_activity_coca_cola" >
        </activity>
        <activity
            android:name=".Vino"
            android:label="@string/title_activity_vino" >
        </activity>
        <activity
            android:name=".Ceviche"
            android:label="@string/title_activity_ceviche" >
        </activity>
        <activity
            android:name=".Pescado"
            android:label="@string/title_activity_pescado" >
        </activity>
    </application>

</manifest>
